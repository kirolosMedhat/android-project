<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivty"
    android:background="@drawable/backgroun">

    <Button
        android:id="@+id/Localbtt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="336dp"
        android:text="Local-Multiplayer"
        android:textSize="25dp"
        android:backgroundTint="#F5F5DC"
        android:textColor="#148F77"/>

    <Button
        android:id="@+id/Singleplayer"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="418dp"
        android:text="SinglePlayer"
        android:textSize="25dp"
        android:backgroundTint="#F5F5DC"
        android:textColor="#148F77"
        />

    <Button
        android:id="@+id/Wifibtt"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="250dp"
        android:text="Wifi-Multiplayer"
        android:textSize="25dp"
        android:backgroundTint="#F5F5DC"
        android:textColor="#148F77"/>
</RelativeLayout>